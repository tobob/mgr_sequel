<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', controller: "posts", action: "show", id: post.id %></td>
        <td><%= link_to 'Edit', controller: "posts", action: "edit", id: post.id %></td>
        <td><%= link_to 'Destroy', controller: "posts", action: "destroy" , id: post.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts %>

<br>

<%= link_to 'New Post', new_post_path %>
